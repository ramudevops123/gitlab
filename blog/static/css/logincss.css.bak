.form-bg:before {
  content: '';
  position: absolute;
  top: -8px;
  right: -8px;
  bottom: -8px;
  left: -8px;
  z-index: -4;
  background: #E0F7C4;
  border-radius: 10px;
  border: 8px solid rgba(218, 231, 219, 0.43);
}
